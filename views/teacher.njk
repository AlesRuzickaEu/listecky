{% extends "_base.njk" %}


{% block title %}: Lektor{% endblock %}


{% block body %}

    <h1>
        Lektor
        <small>(<span class="status_info">{{ classStatus }}</span>)</small>
    </h1>


    <div class="buttons">
        <button class="start_work">Úkol zadán</button>
        <button class="check_status">Chci zjistit, zda už nejsou hotové</button>
        <button class="start_lecture">Začínám výklad</button>
    </div>

    <div class="teacher_desks">
        {% for desk_id, desk in desks %}
            <div class="teacher_desk">
                <h2>{{ desk.coach }}'s <em>{{ desk.name }}</em></h2>
                <div class="students">
                    {% for student_id, student in desk.students %}
                        <div class="student {{ student.status }} {% if student.socketId %}online{% endif %}" data-student-id="{{ student_id }}">
                            <a href="/student/{{ student_id }}">
                                {{ student.name }}
                            </a>
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% endfor %}
    </div>

    {{ super() }}

{% endblock %}
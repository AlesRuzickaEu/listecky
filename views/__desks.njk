<div class="l-desks {% if isHome %}l-desks--home{% else %}l-desks--lector{% endif %}">
    <div class="l-screen">pl√°tno</div>
    {% for desk_id, desk in room.desks %}
        <div
            class="l-desk"
            data-desk-id="{{ desk_id }}"
            style="
                left: {{ desk.layout.position.x * 100 / room.size | round(4) }}%;
                top: {{ desk.layout.position.y * 100 / room.size | round(4) }}%;
                width: {{ 100 / room.size | round(4) }}%;
                height: {{ 100 / room.size | round(4) }}%;
                "
        >
            <div
                class="
                    l-desk-shape
                    l-desk-shape-{{ desk.layout.shape }}
                "
                style="transform: rotate({{ desk.layout.rotation }}deg);"
            >
                <div class="">

                    <div class="l-desk-id">
                        <div class="l-desk-name">{{ desk.name }}</div>
                        <div class="l-desk-coach">{{ desk.coach }}</div>
                    </div>

                    {% for chair_id, chair in desk.chairs %}
                        <div class="l-chair l-chair--position_{{ chair_id }}">
                            <a
                                class=""
                                data-chair-id="{{ chair_id }}"
                                href="/desk/{{ desk_id }}/chair/{{ chair_id }}/"
                            >

                            </a>
                        </div>
                    {% endfor %}
                </div>
            </div>

        </div>
    {% endfor %}
</div>